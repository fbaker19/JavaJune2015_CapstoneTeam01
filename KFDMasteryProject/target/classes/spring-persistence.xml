        <property name="url" value="jdbc:mysql://localhost:3306/Capstone_Sea_Legs_Nautical_Academy"/>
        <property name="username" value="root"/>
        <property name="password" value="apprentice"/>
        <property name="initialSize" value="5"/>
        <property name="maxActive" value="10"/>
    </bean>
        
    <bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="dataSource"/>
    </bean>
    <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
        <property name="dataSource" ref="dataSource"/>
    </bean>
    
    <bean id="pdao" class="com.swcguild.kfdmasteryproect.dao.PostImpl">
        <property name="jdbcTemplate" ref="jdbcTemplate"/>
    </bean>
    
    <bean id="sp" class="com.swcguild.kfdmasteryproect.dao.StaticPageImpl">
        <property name="jdbcTemplate" ref="jdbcTemplate"/>
    </bean>
    
